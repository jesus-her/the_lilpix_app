{
  "expo": {
    "name": "the_lilpix_app",
    "slug": "the_lilpix_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/adaptive-icon_background.png",
    "splash": {
      "image": "./assets/logo/splash_screen.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/adaptive-icon_background.png",
        "backgroundColor": "#000000"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
